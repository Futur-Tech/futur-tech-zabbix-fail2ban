<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
    <version>5.0</version>
    <date>2021-09-24T10:25:06Z</date>
    <groups>
        <group>
            <name>Templates/Futur-Tech/Applications</name>
        </group>
    </groups>
    <templates>
        <template>
            <template>Template Futur-Tech App Fail2ban</template>
            <name>Template Futur-Tech App Fail2ban</name>
            <description>https://github.com/GuillaumeHullin/futur-tech-zabbix-fail2ban</description>
            <groups>
                <group>
                    <name>Templates/Futur-Tech/Applications</name>
                </group>
            </groups>
            <applications>
                <application>
                    <name>Fail2ban</name>
                </application>
            </applications>
            <items>
                <item>
                    <name>Fail2Ban service is running</name>
                    <type>ZABBIX_ACTIVE</type>
                    <key>proc.num[fail2ban-server]</key>
                    <description>ping - tests if the server is alive</description>
                    <applications>
                        <application>
                            <name>Fail2ban</name>
                        </application>
                    </applications>
                    <valuemap>
                        <name>Service state</name>
                    </valuemap>
                    <triggers>
                        <trigger>
                            <expression>{last()}=0</expression>
                            <name>Fail2ban server is Down</name>
                            <priority>AVERAGE</priority>
                        </trigger>
                    </triggers>
                </item>
            </items>
            <discovery_rules>
                <discovery_rule>
                    <name>Fail2ban discovery</name>
                    <type>ZABBIX_ACTIVE</type>
                    <key>fail2ban.discovery</key>
                    <delay>6h</delay>
                    <description>Discovery of jails from fail2ban daemon.</description>
                    <item_prototypes>
                        <item_prototype>
                            <name>Fail2ban $1 banned IPs</name>
                            <type>ZABBIX_ACTIVE</type>
                            <key>fail2ban.status[{#JAIL}]</key>
                            <units>count</units>
                            <applications>
                                <application>
                                    <name>Fail2ban</name>
                                </application>
                            </applications>
                            <trigger_prototypes>
                                <trigger_prototype>
                                    <expression>({avg(1d)}*1.1)-{last()}&lt;0 and {last()}&gt;{$FAIL2BAN.BAN.MIN:&quot;{#JAIL}&quot;}</expression>
                                    <recovery_mode>RECOVERY_EXPRESSION</recovery_mode>
                                    <recovery_expression>({avg(1d,1d)})-{max(1d)}&gt;=0</recovery_expression>
                                    <name>Increased banned IP on Fail2ban {#JAIL}</name>
                                    <opdata>Currently banned addresses: {ITEM.LASTVALUE}</opdata>
                                    <priority>HIGH</priority>
                                    <description>Last value of IP banned is more than 10% above the average of the last 24h. Trigger will recover when the 24h max value is below or equal of the previous 24h average.&#13;
&#13;
You can also set a macro specific to the jail in order to not trigger a problem under a certain threshold of ban.</description>
                                </trigger_prototype>
                            </trigger_prototypes>
                        </item_prototype>
                    </item_prototypes>
                    <graph_prototypes>
                        <graph_prototype>
                            <name>Count of banned IPs on jail {#JAIL}</name>
                            <graph_items>
                                <graph_item>
                                    <sortorder>1</sortorder>
                                    <drawtype>FILLED_REGION</drawtype>
                                    <color>C62828</color>
                                    <item>
                                        <host>Template Futur-Tech App Fail2ban</host>
                                        <key>fail2ban.status[{#JAIL}]</key>
                                    </item>
                                </graph_item>
                            </graph_items>
                        </graph_prototype>
                    </graph_prototypes>
                </discovery_rule>
            </discovery_rules>
            <macros>
                <macro>
                    <macro>{$FAIL2BAN.BAN.MIN}</macro>
                    <value>0</value>
                    <description>Minimum count of bans in order to trigger problem</description>
                </macro>
                <macro>
                    <macro>{$FAIL2BAN.BAN.MIN:&quot;apache-auth&quot;}</macro>
                    <value>0</value>
                </macro>
                <macro>
                    <macro>{$FAIL2BAN.BAN.MIN:&quot;sshd&quot;}</macro>
                    <value>0</value>
                </macro>
                <macro>
                    <macro>{$FAIL2BAN.BAN.MIN:&quot;webmin-auth&quot;}</macro>
                    <value>0</value>
                </macro>
            </macros>
        </template>
    </templates>
    <value_maps>
        <value_map>
            <name>Service state</name>
            <mappings>
                <mapping>
                    <value>0</value>
                    <newvalue>Down</newvalue>
                </mapping>
                <mapping>
                    <value>1</value>
                    <newvalue>Up</newvalue>
                </mapping>
            </mappings>
        </value_map>
    </value_maps>
</zabbix_export>
